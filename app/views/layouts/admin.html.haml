!!!
%html
  %head
    =javascript_include_tag 'vendor/jquery-1.4.4.min'
    =javascript_include_tag 'lib/rails'
    =javascript_include_tag 'lib/master'
    =stylesheet_link_tag 'admin.css'
    =stylesheet_link_tag 'ui-lightness/jquery-ui-1.8.2.custom.css'

    =javascript_include_tag 'vendor/jquery.tablesorter.min'
    =javascript_include_tag 'lib/admin/sort_table'
    =javascript_include_tag 'lib/admin/apply_tiny_mce'
    =javascript_include_tag 'vendor/jquery-ui-1.8.11.min.js'
    =javascript_include_tag 'vendor/tiny_mce/jquery.tinymce.js'
    %title CivicCommons Admin
  %body
    .admin-header
      .wrapper
        %h1
          =link_to "The Civic Commons Admin", admin_root_path
        = csrf_meta_tag
    -if flash[:error]
      .flash-error
        =flash[:error]
    -if flash[:notice]
      .flash-notice
        =flash[:notice]
    .wrapper
      .nav
        %ul
          %li
            =link_to "The Civic Commons Home", root_path
          %li
            =link_to "Articles", admin_articles_path
            %ul
              %li
                =link_to "Add Article", new_admin_article_path
          %li
            =link_to "Conversations", admin_conversations_path
            %ul
              %li
                =link_to "Add Conversation", new_admin_conversation_path
          %li
            =link_to "Regions", admin_regions_path
            %ul
              %li
                =link_to "Add Region", new_admin_region_path
          %li
            =link_to "Issues", admin_issues_path
            %ul
              %li
                =link_to "Add Issue", new_admin_issue_path
              %li
                =link_to "Managed Issue Pages", admin_issues_pages_all_path
          %li
            =link_to "People", admin_people_path
            %ul
              %li
                =link_to "Register User", new_admin_user_registration_path
              %li
                =link_to "Proxy Accounts", proxies_admin_people_path
              %li
                =link_to "Add Proxy Account", new_admin_person_path
          %li
            Content Items
            %ul
              %li
                =link_to "Blog Posts", admin_content_items_type_path('blog_post')
            %ul
              %li
                =link_to "News Items", admin_content_items_type_path('news_items')
            %ul
              %li
                =link_to "Radio Shows", admin_content_items_type_path('radio_shows')
            %ul
              %li
                =link_to "Add Content Item", new_admin_content_item_path
          %li
            =link_to "Static Pages", admin_content_templates_path
            %ul
              %li
                =link_to "Add Static Page", new_admin_content_template_path
          %li
            =link_to "Surveys", admin_surveys_path
            %ul
              %li
                =link_to "Add Survey", new_admin_survey_path
    
      %div#main
        =yield

